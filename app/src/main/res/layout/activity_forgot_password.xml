<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="il.ac.hit.android.smartmeters.login.ForgotPasswordActivity"
        android:orientation="vertical" android:background="@color/color_background_layout">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_title_forgot"
            android:id="@+id/textViewForgotPassword"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextUserNameForGetPass"
            android:layout_marginTop="33dp" android:hint="@string/edit_text_forgot_hint"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_get_password"
            android:id="@+id/buttonGetPassword"
            android:layout_marginTop="10dp"/>
</LinearLayout>
