<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="il.ac.hit.android.smartmeters.login.RegisterNewUserActivity"
                android:background="@color/color_background_layout" android:clickable="false" android:weightSum="1">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="63dp" android:layout_weight="0.14">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewUser2" android:src="@drawable/energy"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/title_activity_register_new_user"
                android:id="@+id/textViewTitle" android:layout_marginTop="50dp" android:layout_marginLeft="40dp"/>
        <ImageView
                android:layout_width="201dp"
                android:layout_height="99dp"
                android:id="@+id/imageViewUser1" android:src="@drawable/user" android:layout_marginLeft="-30dp"/>
    </LinearLayout>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="18"
            android:id="@+id/editTextUserName"
            android:hint="@string/edit_text_user_name"
            android:layout_marginTop="15dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="18"
            android:id="@+id/editTextPassword"
            android:hint="@string/edit_text_password"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="18"
            android:id="@+id/editTextRePassword"
            android:hint="@string/edit_text_re_password"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextAddress"
            android:inputType="text"
            android:ems="18"
            android:hint="@string/edit_text_address"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="18"
            android:id="@+id/editTextPhoneNumber"
            android:hint="@string/edit_text_phone_number"/>

    <Button
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:text="@string/button_save"
            android:id="@+id/buttonGetPassword"
            android:layout_marginTop="33dp"
            android:layout_gravity="center_horizontal"
            android:enabled="false"/>
</LinearLayout>
