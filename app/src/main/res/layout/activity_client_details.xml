<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="il.ac.hit.android.smartmeters.client.ClientDetailsActivity"
              android:background="@color/color_background_layout"
              android:orientation="vertical">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4" android:src="@drawable/client_details" android:layout_marginBottom="40dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_view_client_details_id"
                android:id="@+id/textViewClientId"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="140dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textViewClientIdShow"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/text_view_client_details_name"
                  android:id="@+id/textViewClientName"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="111dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Medium Text"
                  android:id="@+id/textViewClientNameShow"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/text_view_client_details_address"
                  android:id="@+id/textViewClientAddress"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="95dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Medium Text"
                  android:id="@+id/textViewClientAddressShow"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/text_view_client_details_phone_number"
                  android:id="@+id/textViewClientPhoneNumber"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="40dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Medium Text"
                  android:id="@+id/textViewClientPhoneNumberShow" />
    </LinearLayout>


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5" android:src="@drawable/meter_details" android:layout_marginTop="60dp"
            android:layout_marginBottom="25dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="96dp"
                android:layout_height="wrap_content" android:id="@+id/linearLayoutMeterId">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/marker_meter_id"
                    android:id="@+id/textViewMeterId"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="117dp"
                android:layout_height="match_parent" android:id="@+id/linearLayoutMeterAddress">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/marker_meter_address"
                    android:id="@+id/textViewMeterAddress"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/linearLayoutMeterKwh">
            <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/text_view_meter_details_kwh"
                    android:id="@+id/textViewMeterkWh"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
