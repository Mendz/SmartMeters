<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="il.ac.hit.android.smartmeters.support.SupportActivity"
              android:background="@color/color_background_layout"
              android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="159dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:src="@drawable/support_male"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2" android:src="@drawable/support_female"/>
    </LinearLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3" android:src="@drawable/support_screen"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_view_title_support"
            android:id="@+id/textViewSupportTitle"
            android:layout_marginTop="10dp"/>
    <Button
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:text="@string/button_support_reports"
            android:id="@+id/buttonReports"
            android:layout_marginTop="20dp" android:layout_marginLeft="55dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_support_map_all_meters"
            android:id="@+id/buttonMapAllMeters"
            android:layout_marginTop="20dp" android:layout_marginLeft="55dp"/>
</LinearLayout>
